<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/styles.css">
    <script src="https://cdn.tailwindcss.com"></script>
    
    <title>Sport Scheduer</title>
</head>

<body>


    <div class="grid grid-cols-6">

        <div class="col-start-3 col-span-2">
            <%- //include ('header.ejs') %>
    
            <p class="py-2">Welcome to Sports Scheduler</p>
            <p class="py-2"><a class="text-green-400" href="/newSport">Add Sport</a></p>
    
            <div class="border rounded-lg p-4">
                <h2 class="text-lg font-medium text-gray-900 mb-2">List of Sports</h2>
                <ul class="list-disc pl-5 grid gap-2 grid-cols-2">
                    <% 
                    const sports = sessions.map(session => session.sport);
                    const uniqueSports = [...new Set(sports.filter(Boolean))];
                    uniqueSports.forEach(sport => { %>
                        <li>
                            <a href="/sports/<%= sport %>" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                                <%= sport %>
                            </a>
                        </li>
                    <% }); %>
                </ul>
            </div>
    
        </div>
    </div>
    
</body>

</html>